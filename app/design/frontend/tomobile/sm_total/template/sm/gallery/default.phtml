	$titleposition			= $options->titleposition;
	$transition				= $options->transition;
	$show_nextprev			= $options->show_nextprev;
	$count = count($items);
	$total = (int)$options->numberImage;
	if($total > $count){
		$total = $count;
	}
	$total_image_pag = $options->items_page;
	$pags = (int)ceil($total/$total_image_pag);
