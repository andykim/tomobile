			</ul>
		</div>
	</div>
	<div class="sj-content">
		<div class="sj-items">
			<?php
			for($i=0; $i<$pags; $i++){ ?>
			<div class="sj-item <?php if($i==0){echo "active";}?> item">
				<?php $start = $i * $total_image_pag;
					$end   = ($i + 1) * $total_image_pag;
					$qu = 0;
					$j=0;
					foreach ($items as $key => $item){ $j++;
						if($qu == $total_image_pag){
							$qu = 0;
						}
						$qu++;
						
 						if ($key >= $start && $key < $end) {?>
					<div class="item-info" style="<?php if( $j%3 == 0 ){echo "margin-right:0;";}?>">
