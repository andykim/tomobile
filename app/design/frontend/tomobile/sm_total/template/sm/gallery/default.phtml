	<?php if(!empty($options->pretext)) { ?>
	<div class="pre-text">
		<?php echo $options->pretext; ?>
	</div>	
	<?php } ?>
	<div class="sj-gallery-title block-title">Mobile Gallery</div>
	<div class="sj-navigation clearfix">
		<div class="sj-buttons">
			<ul>
				<?php if($show_nextprev==1){ ?>
				<li class="sj-prev i-back" href="#sj_gallery_<?php echo $instance;?>" data-jslide="prev"></li>
				<?php } ?>
				<?php for($j=0; $j<$pags; $j++): ?>
					<li class="sj-nav <?php if( $j == 0 ){echo ' sel';}?>"  href="#sj_gallery_<?php echo $instance;?>" data-jslide="<?php echo $j;?>"></li>
				<?php endfor; ?>						
				<?php if($show_nextprev==1){ ?>
				<li class="sj-next i-next"  href="#sj_gallery_<?php echo $instance;?>" data-jslide="next"></li>
