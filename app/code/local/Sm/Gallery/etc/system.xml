<?xml version="1.0"?>
<config>
    <tabs>
        <sm>
            <label>Magentech.com</label>
            <sort_order>205</sort_order>
        </sm>
    </tabs>    
    <sections>
    	<gallery_cfg translate="label" module="gallery">
    		<label>SM Gallery</label>            
            <tab>sm</tab>
			<frontend_type>text</frontend_type>
            <sort_order>150</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
            	<!-- start general group -->
            	<general translate="label">
            		<label>General settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                    	<isenabled translate="label" module="core">
							<label>Enabled</label>
							<sort_order>10</sort_order>
							<frontend_type>select</frontend_type>
                        	<source_model>adminhtml/system_config_source_yesno</source_model>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</isenabled>
	                	<title translate="label">
	                		<label>Title</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
						</title>
                    </fields>
	            </general>
	            <!-- end general group -->
				
				<!-- start module setting group -->
            	<module_setting translate="label">
            		<label>Module settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>15</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
						<theme translate="label">
		            		<label>Select Theme</label>
		            		<frontend_type>select</frontend_type>
		            		<source_model>gallery/system_config_source_listTheme</source_model>		            		
		            		<sort_order>5</sort_order>
		            		<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</theme>
                    	<folder translate="label" module="core">
							<label>Image folder</label>
							<sort_order>10</sort_order>
							<frontend_type>text</frontend_type>
							<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</folder>
	                	<numberImage translate="label">
	                		<label>Number image</label>
                            <frontend_type>select</frontend_type>
							<frontend_type>text</frontend_type>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
						</numberImage>
						<items_page translate="label">
	                		<label>Products on Page</label>
                            <frontend_type>select</frontend_type>
							<frontend_type>text</frontend_type>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
						</items_page>
						<orderby translate="label">
		            		<label>Order</label>
		            		<frontend_type>select</frontend_type>
		            		<source_model>gallery/system_config_source_orderBy</source_model>		            		
		            		<sort_order>40</sort_order>
		            		<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</orderby>
						<sort translate="label">
		            		<label>Sort</label>
		            		<frontend_type>select</frontend_type>
		            		<source_model>gallery/system_config_source_sortBy</source_model>		            		
		            		<sort_order>50</sort_order>
		            		<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</sort>	
						<titleposition translate="label">
		            		<label>Title Position</label>
		            		<frontend_type>select</frontend_type>
		            		<source_model>gallery/system_config_source_titlePosition</source_model>		            		
		            		<sort_order>60</sort_order>
							<comment>The position of title on popup. Can be set to 'outside', 'inside' or 'over'</comment>
		            		<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</titleposition>
						<transition translate="label">
		            		<label>Popup transition</label>
		            		<frontend_type>select</frontend_type>
		            		<source_model>gallery/system_config_source_typeTransition</source_model>		            		
		            		<sort_order>70</sort_order>
							<comment>The transition type. Can be set to 'elastic', 'fade' or 'none'</comment>
		            		<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</transition>	
						<show_nextprev translate="label">
							<label>Show next/preview</label>
		            		<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
		            		<sort_order>80</sort_order>
		            		<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</show_nextprev>
						<play translate="label">
							<label>Auto Play</label>
		            		<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
		            		<sort_order>90</sort_order>
		            		<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</play>	
						<interval translate="label">
							<label>Interval</label>
		            		<frontend_type>text</frontend_type>
		            		<comment>Speed of Timer. Larger = Slower</comment>
		            		<sort_order>100</sort_order>
		            		<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</interval>	
						<effect translate="label">
		            		<label>Effect</label>
		            		<frontend_type>select</frontend_type>
		            		<source_model>gallery/system_config_source_listEffect</source_model>		            		
		            		<sort_order>110</sort_order>
		            		<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</effect>					
                    </fields>
	            </module_setting>
	            <!-- end module setting group -->
	            
	            <advanced translate="label">
	            	<label>Advanced settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>45</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
						<deviceclass_sfx translate="label">
		            		<label>Device Class Suffix</label>
		            		<frontend_type>textarea</frontend_type>
		            		<sort_order>5</sort_order>
		            		<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</deviceclass_sfx>
                    	<include_jquery translate="label">
                    		<label>Include jQuery</label>
		            		<frontend_type>select</frontend_type>
		            		<source_model>adminhtml/system_config_source_yesno</source_model>
		            		<sort_order>10</sort_order>
		            		<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
                    	</include_jquery>                  	
	            		<pretext translate="label">
		            		<label>Pre-text</label>
		            		<frontend_type>textarea</frontend_type>
		            		<sort_order>20</sort_order>
		            		<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</pretext>
	            		<posttext translate="label">
		            		<label>Post-text</label>
		            		<frontend_type>textarea</frontend_type>
		            		<sort_order>30</sort_order>
		            		<show_in_default>1</show_in_default>
							<show_in_website>1</show_in_website>
							<show_in_store>1</show_in_store>
						</posttext>
					</fields>
	            </advanced>
            </groups>
    	</gallery_cfg>
    </sections>
</config>